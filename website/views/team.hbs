<div class="min-h-screen py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h1 class="text-4xl font-bold mb-4">Meet Our Team</h1>
            <p class="text-xl text-gray-400">
                The brilliant minds behind VeriScan's innovative content screening technology
            </p>
        </div>

        <!-- Faculty Section -->
        <div class="mb-16">
            <h2 class="text-2xl font-semibold mb-8 text-center">Project Supervisor</h2>
            <div class="max-w-2xl mx-auto">
                <div class="bg-gray-800/50 rounded-xl overflow-hidden transition-transform hover:scale-105">
                    <div class="md:flex">
                        <div class="md:w-1/3">
                            <img
                                src="{{teamMembers.[0].image}}"
                                alt="{{teamMembers.[0].name}}"
                                class="w-full h-full object-cover"
                            />
                        </div>
                        <div class="p-6 md:w-2/3">
                            <h3 class="text-xl font-semibold mb-1">{{teamMembers.[0].name}}</h3>
                            <p class="text-blue-400 mb-2">{{teamMembers.[0].role}}</p>
                            <p class="text-gray-300 mb-3">{{teamMembers.[0].designation}}</p>
                            <p class="text-gray-400 mb-4">{{teamMembers.[0].bio}}</p>
                            <div class="flex space-x-4">
                                <a href="#" class="text-gray-400 hover:text-white transition-colors">
                                    <i data-lucide="github" class="h-6 w-6"></i>
                                </a>
                                <a href="#" class="text-gray-400 hover:text-white transition-colors">
                                    <i data-lucide="linkedin" class="h-6 w-6"></i>
                                </a>
                                <a href="#" class="text-gray-400 hover:text-white transition-colors">
                                    <i data-lucide="mail" class="h-6 w-6"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Students Section -->
        <div>
            <h2 class="text-2xl font-semibold mb-8 text-center">Student Team</h2>
            <div class="grid md:grid-cols-2 gap-8">
                {{#each teamMembers}}
                    {{#if @index}}
                        <div class="bg-gray-800/50 rounded-xl overflow-hidden transition-transform hover:scale-105">
                            <div class="md:flex">
                                <div class="md:w-2/5">
                                    <img
                                        src="{{this.image}}"
                                        alt="{{this.name}}"
                                        class="w-full h-full object-cover"
                                    />
                                </div>
                                <div class="p-6 md:w-3/5">
                                    <h3 class="text-xl font-semibold mb-1">{{this.name}}</h3>
                                    <p class="text-blue-400 mb-1">{{this.role}}</p>
                                    <p class="text-gray-300 mb-2">{{this.course}}</p>
                                    <p class="text-gray-400 mb-4">{{this.bio}}</p>
                                    <div class="flex space-x-4">
                                        <a href="#" class="text-gray-400 hover:text-white transition-colors">
                                            <i data-lucide="github" class="h-6 w-6"></i>
                                        </a>
                                        <a href="#" class="text-gray-400 hover:text-white transition-colors">
                                            <i data-lucide="linkedin" class="h-6 w-6"></i>
                                        </a>
                                        <a href="#" class="text-gray-400 hover:text-white transition-colors">
                                            <i data-lucide="mail" class="h-6 w-6"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>