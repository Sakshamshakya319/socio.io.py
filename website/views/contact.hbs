<div class="min-h-screen py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h1 class="text-4xl font-bold mb-4">Get in Touch</h1>
            <p class="text-xl text-gray-400">
                Have questions about VeriScan? We're here to help!
            </p>
        </div>

        {{#if success}}
            <div class="bg-green-900/50 text-green-300 p-4 rounded-lg mb-8 max-w-3xl mx-auto">
                {{success}}
            </div>
        {{/if}}

        <div class="grid md:grid-cols-2 gap-12">
            <div class="bg-gray-800/50 p-8 rounded-xl">
                <h2 class="text-2xl font-semibold mb-6">Contact Information</h2>
                <div class="space-y-6">
                    <div class="flex items-center space-x-4">
                        <i data-lucide="mail" class="h-6 w-6 text-blue-500"></i>
                        <span>sakshamshakya337@gmail.com</span>
                    </div>
                    <div class="flex items-center space-x-4">
                        <i data-lucide="phone" class="h-6 w-6 text-blue-500"></i>
                        <span>+91 9411850565 | +91 7060285319 </span>
                    </div>
                    <div class="flex items-center space-x-4">
                        <i data-lucide="map-pin" class="h-6 w-6 text-blue-500"></i>
                        <span>Lovely Professional University, Phagwara, Punjab. India</span>
                    </div>
                </div>
            </div>

            <div class="bg-gray-800/50 p-8 rounded-xl">
                <form action="/contact" method="POST" class="space-y-6">
                    <div>
                        <label class="block text-sm font-medium mb-2">Name</label>
                        <input
                            type="text"
                            name="name"
                            class="w-full px-4 py-2 rounded-lg bg-gray-700 border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
                            required
                        />
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-2">Email</label>
                        <input
                            type="email"
                            name="email"
                            class="w-full px-4 py-2 rounded-lg bg-gray-700 border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
                            required
                        />
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-2">Message</label>
                        <textarea
                            name="message"
                            class="w-full px-4 py-2 rounded-lg bg-gray-700 border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 h-32"
                            required
                        ></textarea>
                    </div>
                    <button
                        type="submit"
                        class="w-full bg-blue-600 hover:bg-blue-700 py-3 rounded-lg flex items-center justify-center space-x-2"
                    >
                        <i data-lucide="send" class="h-5 w-5"></i>
                        <span>Send Message</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>